#!/usr/bin/env node

const fs = require('fs')
const program = require('commander')
const path = require('path')

program.usage('<git-template-url> [git@gitee.com:{{template}}.git]')
  .parse(process.argv)

if (program.args.length < 1) {
  program.help()
  return
}

fs.createWriteStream(path.join(__dirname, '../gitrepo.json'))
  .write(JSON.stringify({
    git: program.args[0]
  }))